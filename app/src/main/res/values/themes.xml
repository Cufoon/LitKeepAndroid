<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.LitKeep" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:statusBarColor">@color/purple_700</item>
    </style>

    <style name="Theme.LitKeep.Starting" parent="Theme.SplashScreen">
        <!-- Set the splash screen background, animated icon, and animation duration. -->
        <item name="windowSplashScreenBackground">@color/startPink</item>

        <!-- Use windowSplashScreenAnimatedIcon to add either a drawable or an
             animated drawable. One of these is required. -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash_screen_icon_anim</item>
        <!-- Required for animated icons -->
        <item name="windowSplashScreenAnimationDuration">650</item>
        <item name="android:windowSplashScreenBrandingImage">@drawable/splash_screen_brand</item>

        <!-- Set the theme of the Activity that directly follows your splash screen. -->
        <!-- Required -->
        <item name="postSplashScreenTheme">@style/Theme.LitKeep</item>
    </style>
</resources>